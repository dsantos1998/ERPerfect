{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ActiveConnection": "Test",
  "ConnectionStrings": {
    "Production": "Data Source=IP_HERE;Initial Catalog=DATABASE;User Id=test;Password=test",
    "Test": "Data Source=IP_HERE;Initial Catalog=DATABASE;User Id=test;Password=test"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      //"Default": "Information" //default
      "Default": "Warning"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/ERPerfect-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3} {Username} {Message:lj}{Exception}{NewLine}",
          "retainedFileCountLimit": 14
        }
      }
    ]
  }
}
