@{
    ViewData["Title"] = "Login";
}


<div class="container p-3">
    <div class="row text-center m-5 bg-light rounded shadow">

        <!-- Login -->
        <div class="col-12">
            <h1 class="py-3">Inicio de sesión</h1>
        </div>

        <!-- Petición de credenciales -->
        <div class="col-12">
            <div class="row align-items-center">

                <!-- Formulario -->
                @using (Html.BeginForm("Authorization", "Login", FormMethod.Post))
                {
                    <!-- Usuario -->
                    <div class="input-group mb-3">
                        <div class="form-floating">
                            <input type="text" name="username" class="form-control" placeholder="Usuario">
                            <label>
                                <i class="bi bi-people-fill"></i>
                                Usuario
                            </label>
                        </div>
                    </div>

                    <!-- Contraseña -->
                    <div class="input-group mb-3">
                        <div class="form-floating">
                            <input type="password" name="password" class="form-control" placeholder="Contraseña">
                            <label>
                                <i class="bi bi-key-fill"></i>
                                Contraseña
                            </label>
                        </div>
                    </div>

                    <!-- Submit -->
                    <div class="input-group mb-3">
                        <button type="submit" class="btn btn-primary border-0 col-12 p-2 fw-bold fs-5">Iniciar sesión</button>
                    </div>
                }

            </div>
        </div>

    </div>
</div>
