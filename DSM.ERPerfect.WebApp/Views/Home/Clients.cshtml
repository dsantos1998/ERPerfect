@using DSM.ERPerfect.Models.VM.Home
@model ClientsVM

@{
    ViewData["Title"] = "Home";
}

@section Scripts{
    <script src="~/js/ajax/home.js" asp-append-version="true"></script>
}

<partial name="~/Views/Shared/_TopMenu.cshtml" for="@Model.CookieUsuario" />

<div class="container-fluid p-3">
    <div class="row text-center m-2 bg-light rounded-0 shadow">
        <div class="col-12 my-2">
            <h3>Clientes</h3>
        </div>
        <div class="col-12 my-2 text-end">
            <button class="btn btn-outline-success"><i class="bi bi-plus-square me-2"></i>Añadir</button>
            <button class="btn btn-outline-secondary"><i class="bi bi-arrow-down me-2"></i>Desactivados</button>
            <button class="btn btn-outline-primary"><i class="bi bi-arrow-up me-2"></i>Activados</button>
        </div>
        <div class="col-12" id="client-container">
            <div class="row">
                <partial name="~/Views/Home/Partials/_TablaClientes.cshtml" for="@Model.Clientes" />
            </div>
        </div>
    </div>
</div>



